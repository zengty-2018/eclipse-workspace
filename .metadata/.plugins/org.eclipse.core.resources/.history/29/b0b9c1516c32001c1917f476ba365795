<?xml version="1.0" encoding="UTF-8"?>
<project name="HelloWorld" default="junit-test" basedir=".">
 
	<property file="./build.properties"/>
 
	<target name="create-path">
		<mkdir dir="${dest}"/>
		<mkdir dir="${lib}"/>
	</target>
 
	<target name="create-class" depends="create-path">
		<javac srcdir="${src}" destdir="${build/classes}"/>
	</target>
 
	<target name="create-jar" depends="create-class">
		<jar destfile="${build/jar}" basedir="${build/classes}">
		   <manifest>
			  <attribute name="Main-Class" value="HelloWorld"/>
		   </manifest>
		</jar>
	</target>
 
	<target name="run-HelloWorld" depends="create-jar">
		<java classname="HelloWorld" classpath="${build/jar}"/>
	</target>
 
	<target name="junit-test" depends="run-HelloWorld">
		<junit printsummary="true">
			<classpath>
				<pathelement path="${build/jar}"/>
			</classpath>
			<test name="JunitTest">
			</test>
		</junit>
	</target>

	<target name="clean">
		<delete file="${np_jar}"/>
		<delete dir="${dest}"/>
		<delete dir="${lib}"/>
	</target>
</project>