<?xml version="1.0" encoding="UTF-8"?>
<project name="HelloWorld" default="junit-test" basedir=".">
 
	<property file="./build.properties"/>
 
	<target name="create-class">
		<javac srcdir="src/main" destdir="build/classes"/>
	</target>
 
	<target name="create-jar" depends="create-class">
		<jar destfile="hello_jar" basedir="build/classes">
		   <manifest>
			  <attribute name="Main-Class" value="hello_jar"/>
		   </manifest>
		</jar>
	</target>
 
	<target name="run-HelloWorld" depends="create-jar">
		<java classname="HelloWorld" classpath="hello_jar"/>
	</target>
 
	<target name="junit-test" depends="run-HelloWorld">
		<junit printsummary="true">
			<classpath>
				<pathelement path="${build/jar}"/>
			</classpath>
			<test name="JunitTest">
			</test>
		</junit>
	</target>

</project>